{
    "dataRoles": [
        {
            "displayName": "Employee Id",
            "name": "employeeId",
            "kind": "Grouping",
            "description": "Unique identifier for each person in the organisation."
        },
        {
            "displayName": "Manager Id",
            "name": "managerId",
            "kind": "Grouping",
            "description": "Identifier of the manager the person reports to."
        },
        {
            "displayName": "Display Name",
            "name": "displayName",
            "kind": "Grouping",
            "description": "Full name shown on each card."
        },
        {
            "displayName": "Title",
            "name": "title",
            "kind": "Grouping",
            "description": "Role or job title to show on the card."
        },
        {
            "displayName": "Division",
            "name": "department",
            "kind": "Grouping",
            "description": "Business unit or team name."
        },
        {
            "displayName": "Image URL",
            "name": "imageUrl",
            "kind": "Grouping",
            "description": "Optional image URL used for the avatar thumbnail."
        },
        {
            "displayName": "Details",
            "name": "details",
            "kind": "Grouping",
            "description": "Additional descriptive fields displayed under the title."
        },
        {
            "displayName": "Metrics",
            "name": "metric",
            "kind": "Measure",
            "description": "Numeric values rendered as compact badges on each card."
        }
    ],
    "objects": {
        "layout": {
            "displayName": "Layout",
            "properties": {
                "nodeWidth": {
                    "displayName": "Node width",
                    "type": { "numeric": true }
                },
                "nodeHeight": {
                    "displayName": "Node height",
                    "type": { "numeric": true }
                },
                "horizontalSpacing": {
                    "displayName": "Horizontal spacing",
                    "type": { "numeric": true }
                },
                "verticalSpacing": {
                    "displayName": "Vertical spacing",
                    "type": { "numeric": true }
                },
                "enableZoom": {
                    "displayName": "Enable zoom & pan",
                    "type": { "bool": true }
                },
                "showToolbar": {
                    "displayName": "Show toolbar",
                    "type": { "bool": true }
                }
            }
        },
        "card": {
            "displayName": "Card",
            "properties": {
                "backgroundColor": {
                    "displayName": "Background",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "accentColor": {
                    "displayName": "Accent",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "borderColor": {
                    "displayName": "Border",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "textColor": {
                    "displayName": "Primary text",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "showShadow": {
                    "displayName": "Drop shadow",
                    "type": { "bool": true }
                },
                "showImage": {
                    "displayName": "Show avatars",
                    "type": { "bool": true }
                },
                "cardAlignment": {
                    "displayName": "Content alignment",
                    "type": {
                        "enumeration": [
                            { "displayName": "Left", "value": "start" },
                            { "displayName": "Center", "value": "center" },
                            { "displayName": "Right", "value": "end" }
                        ]
                    }
                },
                "borderWidth": {
                    "displayName": "Border width",
                    "type": { "numeric": true }
                },
                "borderRadius": {
                    "displayName": "Corner radius",
                    "type": { "numeric": true }
                }
            }
        },
        "labels": {
            "displayName": "Labels",
            "properties": {
                "nameTextSize": {
                    "displayName": "Name size",
                    "type": { "formatting": { "fontSize": true } }
                },
                "titleTextSize": {
                    "displayName": "Title size",
                    "type": { "formatting": { "fontSize": true } }
                },
                "detailTextSize": {
                    "displayName": "Detail size",
                    "type": { "formatting": { "fontSize": true } }
                }
            }
        },
        "links": {
            "displayName": "Links",
            "properties": {
                "linkColor": {
                    "displayName": "Link color",
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "linkWidth": {
                    "displayName": "Link width",
                    "type": { "numeric": true }
                },
                "linkOpacity": {
                    "displayName": "Link opacity",
                    "type": { "numeric": true }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "table": {
                "rows": {
                    "select": [
                        { "bind": { "to": "employeeId" } },
                        { "for": { "in": "managerId" } },
                        { "for": { "in": "displayName" } },
                        { "for": { "in": "title" } },
                        { "for": { "in": "department" } },
                        { "for": { "in": "imageUrl" } },
                        { "for": { "in": "details" } },
                        { "for": { "in": "metric" } }
                    ]
                }
            },
            "conditions": [
                {
                    "employeeId": { "min": 1, "max": 1 },
                    "managerId": { "max": 1 },
                    "displayName": { "max": 1 },
                    "title": { "max": 1 },
                    "department": { "max": 1 },
                    "imageUrl": { "max": 1 },
                    "details": { "max": 5 },
                    "metric": { "max": 6 }
                }
            ]
        }
    ],
    "supportsHighlight": true,
    "sorting": {
        "default": {}
    },
    "privileges": []
}
